<div class="insert-container">

    <div class="input-container">
        <div class="text-container">
            Patient ID
        </div>
        <input type="text" id="insert-patientid-input">
    </div>

    <div class="input-container">
        <div class="text-container">
            Doctor ID
        </div>
        <input type="text" id="insert-doctorid-input">
    </div>

    <div class="input-container">
        <div class="text-container">
            Clinic ID
        </div>
        <input type="text" id="insert-clinicid-input">
    </div>

    <div class="input-container">
        <div class="text-container">
            App Status
        </div>
        <select id="insert-appstatus-input">
            <option value="">Select App Status</option>
            <option value="Complete">Complete</option>
            <option value="Queued">Queued</option>
            <option value="NoShow">NoShow</option>
            <option value="Serving">Serving</option>
            <option value="Cancel">Cancel</option>
            <option value="Skip">Skip</option>
        </select>
    </div>

    <div class="input-container">
        <div class="text-container">
            Time Queued
        </div>
        <input type="datetime-local" id="insert-timequeued-input">
    </div>

    <div class="input-container">
        <div class="text-container">
            Queue Date
        </div>
        <input type="datetime-local" id="insert-queuedate-input">
    </div>

    <div class="input-container">
        <div class="text-container">
            Start Time
        </div>
        <input type="datetime-local" id="insert-starttime-input">
    </div>

    <div class="input-container">
        <div class="text-container">
            End Time
        </div>
        <input type="datetime-local" id="insert-endtime-input">
    </div>

    <div class="input-container">
        <div class="text-container">
            Appointment Type
        </div>
        <select id="insert-apptype-input">
            <option value="">Select Type</option>
            <option value="Consultation">Consultation</option>
            <option value="Inpatient">Inpatient</option>
        </select>
    </div>

    <div class="input-container">
        <div class="text-container">
            Is Virtual
        </div>
        <select id="insert-isvirtual-input">
            <option value="">Select Virtual</option>
            <option value="True">True</option>
            <option value="False">False</option>
        </select>
    </div>

    <div class="input-container">
        <div class="text-container">
            Region
        </div>
        <select id="insert-clinicregion-input">
            <option value="">Select Region</option>
            <option value="Western Visayas (VI)">Western Visayas (VI)</option>
            <option value="Central Visayas (VII)">Central Visayas (VII)</option>
            <option value="Eastern Visayas (VIII)">Eastern Visayas (VIII)</option>
            <option value="Zamboanga Peninsula (IX)">Zamboanga Peninsula (IX)</option>
            <option value="Northern Mindanao (X)">Northern Mindanao (X)</option>
            <option value="Davao Region (XI)">Davao Region (XI)</option>
            <option value="SOCCSKSARGEN (Cotabato Region) (XII)">SOCCSKSARGEN (Cotabato Region) (XII)</option>
            <option value="Caraga (XIII)">Caraga (XIII)</option>
            <option value="Bangsamoro Autonomous Region in Muslim Mindanao (BARMM)">Bangsamoro Autonomous Region in Muslim Mindanao (BARMM)</option>
        </select>
    </div>

    <button class="submit-btn" id="insert-submit-btn">Insert</button>

</div>
